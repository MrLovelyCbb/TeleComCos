<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="telecom_style_banner">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@drawable/telecom_banner_text_selector</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center_horizontal</item>  
        <item name="android:background">@drawable/telecom_banner_background_selector</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>  
        <item name="android:singleLine">true</item>
        <item name="android:drawablePadding">2.0dip</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    
   <style name="main_tab_bottom">
        <item name="android:textSize">10.0dip</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center_horizontal</item>  
        <item name="android:background">@drawable/main_menu_background_selector</item>
        <item name="android:paddingTop">5.0dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>  
        <item name="android:singleLine">true</item>
        <item name="android:drawablePadding">2.0dip</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    
    <!-- Font color setting-->
    <style name="telecom_textview_color" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@android:color/white</item>
    </style>
    <!-- 进度条 -->
    <style name="animstyle" parent="@android:style/Widget.ProgressBar.Large">
        <item name="android:indeterminateDrawable">@anim/progroudbar</item>
    </style>
    
    <style name="telecom_txttitle_txtcolor">
        <item name="android:textColor">#0071ab</item>
    </style>
    <style name="telecom_txtcontent_textcolor">
        <item name="android:textColor">#666666</item>
    </style>
    
</resources>